<?xml version="1.0" encoding="utf-8"?>
<com.jude.fitsystemwindowlayout.FitSystemWindowsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>


        <ImageView
            android:id="@+id/iv_about_logo"
            android:layout_below="@+id/app_bar"
            android:layout_marginTop="100dp"
            android:src="@mipmap/ic_logo_no_rect"
            android:layout_centerHorizontal="true"
            android:layout_width="160dp"
            android:scaleType="fitCenter"
            android:layout_height="160dp"/>

        <TextView
            android:id="@+id/tv_about_title"
            android:layout_marginTop="24dp"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/primary_text"
            android:layout_below="@+id/iv_about_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/tv_about_version"
            android:layout_below="@+id/tv_about_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            tools:text="Ver.1.0.0"
            android:typeface="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</com.jude.fitsystemwindowlayout.FitSystemWindowsFrameLayout>